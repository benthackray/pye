
<div class="row row-cols-1 row-cols-md-2 mt-4">
    <center>
        <br>
        <h1>Profile settings</h1>
        <br>
        <h4>Change Username</h4> 
        <br>
        <form class="username-form">
        <div>
            <label for="new-username" style="font-size: 20px;">New Username</label>
            <input type="text" class="new-username" id="new-username"> <br>
        <br>
            <button type="submit" class="button button-rounded-hover">Submit</button>
        </form>
        </div>
        <br>
        <h4>Change Password</h4> 
        <br>
        <form class="password-form">
        <div>
            <label for="new-password" style="font-size: 20px;">New Password</label>
            <input type="password" class="new-password" id="new-password"> 
        <br>
        <br>
            <label for="confirm-new-password" style="font-size: 20px;">Confirm New Password</label>
            <input type="password" class="confirm-new-password" id="confirm-new-password"> 
        <br>
        <br>
            <button type="submit" class="button button-rounded-hover">Submit</button>
        </form>
        </div>
        <br>
        <h4>Custom Icon</h4>
        <form class="icon-form">
                <label for="icon-url" style="font-size: 20px;">Enter a Custom Icon URL</label>
                <input type="text" class="icon-url" id="icon-url"> <br>
        <br>
                <button type="submit" class="button button-rounded-hover">Submit</button>

            </form>

    </center>
    <center>
    
        <div>
            <br />
            <h1>{{data.username}}'s Pies</h1>
            <br />
            <div id="user-pies" class="container w-75 d-flex flex-column justify-content-center">
                {{#each data.pies as |pie|}}
                {{> user-pie}}
                {{/each}}
            </div>
        </div>
    
    </center>
</div>

<script src="/js/profile.js"></script>
<script src="/js/username.js"></script>
<script src="/js/password.js"></script>
<script src="/js/icon.js"></script>
